<html>
    <head>
        <title>Hangman</title>
    </head>
    <body>
        <h1>Hangman</h1>
        <p id="progress">
            <%= progress.scan(/./).join(' ') %>
        </p>
        <% if status == "win" %>
            <p id="win_lose">You are victorious!</p>
        <% elsif status == "lose" %>
            <p id="win_lose">You have been defeated!</p>
            <p>The answer was <%= answer %>.</p>
        <% else %>
            <form>
                <input type="text" name="guess" pattern="[A-Za-z]{1}" size="2" autofocus/>
                <input type="submit" value="Guess!"/>
            </form>
            <p id="tries">
                <span id="tries_number"><%= tries %></span>
                <% if tries != 1 %>
                    tries
                <% else %>
                    try
                <% end %>
                left!
            </p>
        <% end %>
        <p id="wrong_guesses">
            Wrong guesses: <span id="wrong_guesses_list"><%= bad_guesses.join(', ') %></span>
        </p>
        <nav class="buttons">
            <a href="<%= url('/save') %>">Save</a>
            <a href="<%= url('/load') %>">Load</a>
            <a href="<%= url('/newgame') %>">New Game</a>
        </nav>
    </body>
</html>
