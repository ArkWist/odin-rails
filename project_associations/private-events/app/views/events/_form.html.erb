<%= form_for @event do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= f.label :location %>
  <%= f.text_field :location %>
  
  <%= f.label :date %>
  <%= f.date_field :date %>
  
  <%= f.submit yield(:button_text) %>
  
<% end %>