<h1>New</h1>


<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prevented this user from being created.</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @user do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username, placeholder: "full name" %>
  <br>
  <%= f.label :email, "Email:" %>
  <%= f.email_field :email, placeholder: "email@example.com" %>
  <br>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password, placeholder: "hunter2" %>
  <br>
  <%= f.submit "Submit" %>
<% end %>


