<h1>Edit</h1>

<%= form_for @user do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username, placeholder: "full name" %>
  <br>
  <%= f.label :email, "Email:" %>
  <%= f.email_field :email, placeholder: "email@example.com" %>
  <br>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password, placeholder: "hunter2" %>
  <br>
  <%= f.submit "Submit" %>
<% end %>
