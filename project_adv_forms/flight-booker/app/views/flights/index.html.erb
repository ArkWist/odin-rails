<h1>Flights#index</h1>
<p>Find me in app/views/flights/index.html.erb</p>

<%= form_tag(flights_path, method: :get) do %>

  <%= label_tag "From" %>
  <%= select_tag :origin, options_for_select(@airports) %>
  
  <%= label_tag "To" %>
  <%= select_tag :destination, options_for_select(@airports) %>

  <%= label_tag "Passengers" %>
  <%= select_tag :passengers, options_for_select(@passenger_count) %>
  
  <%= label_tag "Date" %>
  <%= select_tag :date, options_for_select(@flight_dates) %>
  
  <%= submit_tag "Search" %>
  
<% end %>
